<%- include('../layout', { body: `
<div class="space-y-8">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white p-8 rounded-lg">
        <h1 class="text-3xl font-bold mb-2">Welcome back, ${user.name}!</h1>
        <p class="text-blue-100">Ready to participate in exciting hackathons?</p>
    </div>

    <!-- My Registrations -->
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center">
            <i class="fas fa-clipboard-list mr-3 text-blue-600"></i>
            My Registrations
        </h2>
        
        ${registrations && registrations.length > 0 ? `
            <div class="grid gap-4">
                ${registrations.map(reg => `
                    <div class="border border-gray-200 rounded-lg p-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-semibold text-lg">${reg.hackathon.title}</h3>
                                <p class="text-gray-600">${reg.hasPartner ? 'Team Registration (with partner)' : 'Individual Registration'}</p>
                                <p class="text-sm text-gray-500">Registered: ${new Date(reg.createdAt).toLocaleDateString()}</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm font-medium ${
                                reg.status === 'approved' ? 'bg-green-100 text-green-800' :
                                reg.status === 'rejected' ? 'bg-red-100 text-red-800' :
                                'bg-yellow-100 text-yellow-800'
                            }">
                                ${reg.status.charAt(0).toUpperCase() + reg.status.slice(1)}
                            </span>
                        </div>
                    </div>
                `).join('')}
            </div>
        ` : `
            <div class="text-center py-8 text-gray-500">
                <i class="fas fa-clipboard-list text-4xl mb-4"></i>
                <p>No registrations yet. Register for a hackathon below!</p>
            </div>
        `}
    </div>

    <!-- Available Hackathons -->
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold mb-6 flex items-center">
            <i class="fas fa-code mr-3 text-green-600"></i>
            Available Hackathons
        </h2>
        
        ${hackathons && hackathons.length > 0 ? `
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                ${hackathons.map(hackathon => `
                    <div class="border border-gray-200 rounded-lg p-6 hover:shadow-lg transition duration-300">
                        <h3 class="font-bold text-xl mb-3">${hackathon.title}</h3>
                        <p class="text-gray-600 mb-4 line-clamp-3">${hackathon.description}</p>
                        
                        <div class="space-y-2 mb-4 text-sm">
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-calendar mr-2"></i>
                                ${new Date(hackathon.startDate).toLocaleDateString()} - ${new Date(hackathon.endDate).toLocaleDateString()}
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-users mr-2"></i>
                                Max ${hackathon.maxParticipants} participants
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-clock mr-2"></i>
                                Register by ${new Date(hackathon.registrationDeadline).toLocaleDateString()}
                            </div>
                        </div>
                        
                        <div class="flex justify-between items-center">
                            <span class="text-green-600 font-semibold">
                                <i class="fas fa-trophy mr-1"></i>
                                Prizes Available
                            </span>
                            ${registrations && registrations.some(reg => reg.hackathon._id === hackathon._id) ? `
                                <span class="bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm">
                                    Already Registered
                                </span>
                            ` : `
                                <a href="/user/register/${hackathon._id}" 
                                   class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300">
                                    Register Now
                                </a>
                            `}
                        </div>
                    </div>
                `).join('')}
            </div>
        ` : `
            <div class="text-center py-8 text-gray-500">
                <i class="fas fa-code text-4xl mb-4"></i>
                <p>No hackathons available at the moment. Check back later!</p>
            </div>
        `}
    </div>
</div>
` }) %>